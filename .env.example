# ── Dhan API Credentials (Local Access Token) ────────────────────
DHAN_CLIENT_ID="YOUR_DHAN_CLIENT_ID"
DHAN_ACCESS_TOKEN="YOUR_DHAN_ACCESS_TOKEN"

# ── Dhan OAuth Credentials (for Render/Production) ───────────────
DHAN_API_KEY="YOUR_DHAN_API_KEY"
DHAN_CLIENT_SECRET="YOUR_DHAN_CLIENT_SECRET"

# ── Dashboard Auth ────────────────────────────────────────────────
DASHBOARD_USERNAME="admin"
DASHBOARD_PASSWORD="changeme_in_production"

# ── Flask Session Secret (use a long random string in production) ─
SECRET_KEY="a-very-long-random-secret-key-change-this"

# ── Database (Render provides this automatically via render.yaml) ─
POSTGRES_URI="postgresql://user:password@host:5432/dbname"

# ── Trading Mode ──────────────────────────────────────────────────
# Set to "False" to enable live order placement
PAPER_TRADE="True"
